{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "asset/*": [
        "./src/asset/*"
      ],
      "sass": [
        "./src/sass"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}